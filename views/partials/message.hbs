{{#if errs}}
{{#each errs}}
<div class="alert alert-danger alert-dismissible fade show" role="alert" style="text-align: center; font-size: 1rem;">
  {{this.msg}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}
{{/if}}

{{!-- filter Error --}}
